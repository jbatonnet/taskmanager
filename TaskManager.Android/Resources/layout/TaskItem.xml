<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/TaskItemIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/TaskItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/TaskItemIcon"
        android:layout_toEndOf="@+id/TaskItemIcon"
        android:layout_alignParentTop="false"
        android:text="TaskItemName"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:textColor="@android:color/primary_text_light" />

    <TextView
        android:id="@+id/TaskItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/TaskItemIcon"
        android:layout_alignBottom="@+id/TaskItemIcon"
        android:text="TaskItemDescription"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:textColor="@android:color/tertiary_text_light" />

</RelativeLayout>